container_commands:
    01changePHP:
        command: sed -i '/PHP_DATE_TIMEZONE/ s/IST/Asia\/Kolkata/' /etc/php.d/environment.ini
    01achangePHP:
        command: sed -i '/aws.php_date_timezone/ s/IST/Asia\/Kolkata/' /etc/php.d/environment.ini
    02change_AWS_PHP:
        command: sed -i '/PHP_DATE_TIMEZONE/ s/IST/Asia\/Kolkata/' /etc/httpd/conf.d/aws_env.conf
    03php_ini_set:
        command: sed -i '/date.timezone/ s/IST/Asia\/Kolkata/' /etc/php.ini
commands:
    01remove_local:
        command: "rm -rf /etc/localtime"
    02link_Buenos_Aires:
        command: "ln -s /usr/share/zoneinfo/Asia/Kolkata /etc/localtime"
    03restart_http:
        command: sudo service httpd restart